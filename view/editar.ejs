<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Controle de Finanças- teste</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="http://localhost:3000/style.css">
    <link rel="icon" href="http://localhost:3000/sao-patricio.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

</head>

<body>
    <div class="form-edit ">
        <form action="editar-registro" method="post" id="form" class="form1">

            <span>Descrição</span>
            <input type="hidden" value="<%= dados.id %>" name="id">
            <input type="text" aria-label="First name" class="form-control" required name="descricao" id="descricao"
                value="<%= dados.descricao %>">
            <span>Categoria</span>
            <select class="form-select opcoes" id="inputGroupSelect04 opcoes categoria"
                aria-label="Example select with button addon" name="categoria">
                <option value="<%= dados.categoria %>">
                    <%= dados.categoria %>
                </option>
                <option value="Compras diversas">Compras diversas</option>
                <option value="Investimentos">Investimentos</option>
                <option value="vendas">Vendas</option>
                <option value="vendas">Lazer</option>
                <option value="vendas">Contas</option>
                <option value="vendas">Alimentação</option>

            </select>
            <span>Valor</span>
            <input type="number" aria-label="Last name" class="form-control" id="valor" required step="0.01"
                name="valor" value="<%= dados.valor %>">


            <span>Tipo</span>
            <select class="form-select opcoes" id="inputGroupSelect04 tipo"
                aria-label="Example select with button addon" name="tipo" required>
                <option value="1">Entrada</option>
                <option value="0">Saída</option>
            </select>
            <span>Data</span>
            <input type="date" class="form-control" name="dataRegistro" id="data">
            <button type="submit" class="btn btn-outline-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-pencil-square" viewBox="0 0 16 16">
                    <path
                        d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                    <path fill-rule="evenodd"
                        d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                </svg>
                Editar
            </button>

        </form>

        <form action="excluir" method="post" class="form2" id="formExcluir">
            <input type="hidden" value="<%= dados.id %>" name="id">

            <button id="btnExcluir" class="btn btn-outline-danger" onclick="confirmarExclusao()">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3"
                    viewBox="0 0 16 16">
                    <path
                        d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                </svg>
                Excluir Registro
            </button>
        </form>
        <button type="button" class="voltar btn btn-outline-secondary" > <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"/>
          </svg> <a href="/">Voltar</a></button>

    </div>




    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    <script src="http://localhost:3000/apagarDados.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const dataRegistro = new Date('<%= dados.dataRegistro %>');
            const ano = dataRegistro.getFullYear();
            const mes = String(dataRegistro.getMonth() + 1).padStart(2, '0');
            const dia = String(dataRegistro.getDate()).padStart(2, '0')
            const dataFormatada = `${ano}-${mes}-${dia}`;

            document.getElementById('data').value = dataFormatada;

        });

        function confirmarExclusao() {
            const confirmacao = window.confirm('Tem certeza que deseja excluir este registro?');
            if (confirmacao) {
                document.getElementById('formExcluir').submit();
            } 
             else{
                event.preventDefault();
             }
        }
    </script>


</html>