<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Controle de Finanças- teste</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="http://localhost:3000/style.css">
    <link rel="icon" href="http://localhost:3000/sao-patricio.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

</head>

<body>
    <div class="form-edit">
        <form action="editar-registro" method="post" id="form" class="form1">
            <div class="input-group">
                <span class="input-group-text">Descrição:</span>
                <input type="hidden" value="<%= dados.id %>" name="id">
                <input type="text" aria-label="First name" class="form-control" required name="descricao" id="descricao"
                    value="<%= dados.descricao %>">
                <label><span class="input-group-text" for>Categoria:</span></label>
                <select class="form-select opcoes" id="inputGroupSelect04 opcoes categoria"
                    aria-label="Example select with button addon" name="categoria">
                    <option value="<%= dados.categoria %>"></option>
                    <option value="Compras diversas">Compras diversas</option>
                    <option value="Investimentos">Investimentos</option>
                    <option value="Atualizacao de estoque">Atualização de estoque</option>
                    <option value="vendas">Vendas</option>
                    <option value="manutencao">Manunteção</option>

                </select>
                <span class="input-group-text">Valor:</span>
                <input type="number" aria-label="Last name" class="form-control" id="valor" required step="0.01"
                    name="valor" value="<%= dados.valor %>">
            </div>
            <div class="input-group">
                <label><span class="input-group-text">Tipo:</span></label>
                <select class="form-select opcoes" id="inputGroupSelect04 tipo"
                    aria-label="Example select with button addon" name="tipo" required>
                    <option value="1">Entrada</option>
                    <option value="0">Saída</option>
                </select>
                <span class="input-group-text">Data:</span>
                <input type="date" class="form-control" name="dataRegistro" id="data" >
                <button type="submit" class="btn btn-outline-primary" id="btn"><svg xmlns="http://www.w3.org/2000/svg"
                        width="16" height="16" fill="currentColor" class="bi bi-arrow-down-right-circle seta2"
                        viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.854 5.146a.5.5 0 1 0-.708.708L9.243 9.95H6.475a.5.5 0 1 0 0 1h3.975a.5.5 0 0 0 .5-.5V6.475a.5.5 0 1 0-1 0v2.768L5.854 5.146z" />
                    </svg> Editar </button>

            </div>
        </form>

        <form action="excluir" method="post" >
            <input type="hidden" value="<%= dados.id %>" name="id">
    
            <button id="btnExcluir">
                Excluir Registro
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-trash3-fill lixeira" viewBox="0 0 16 16">
                    <path
                        d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                </svg>
            </button>
        </form>
        
    </div>
    



    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    <script src="http://localhost:3000/apagarDados.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const dataRegistro = new Date('<%= dados.dataRegistro %>');
            const ano = dataRegistro.getFullYear();
            const mes = String(dataRegistro.getMonth() + 1).padStart(2, '0');
            const dia = String(dataRegistro.getDate()).padStart(2, '0')
            const dataFormatada = `${ano}-${mes}-${dia}`;

            document.getElementById('data').value = dataFormatada;

        });
    </script>


</html>