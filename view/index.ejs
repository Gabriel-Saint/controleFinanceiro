</head>

<body>
  <div class="container">
    <div class="header">
      <div class="entradas">
        Entradas: <br>
        R$: <span id="entrada">00,00</span>
      </div>
      <div class="saidas">
        Saídas: <br>
        R$: <span id="saidas">00,00</span>
      </div>
      <div class="total">
        Total: <br>
        R$: <span id="total">00,00</span>
      </div>
    </div>

    <div class="form">
      <form action="registrar" method="post" id="form">
        <div class="input-group">
          <span class="input-group-text">Descrição :</span>
          <input type="text" aria-label="First name" class="form-control" required name="descricao" id="descricao">
          <label for="opcoes"><span class="input-group-text" for>Categoria:</span></label>
          <select class="form-select opcoes" id="inputGroupSelect04 opcoes categoria"
            aria-label="Example select with button addon" name="categoria" required >
            <option value=""></option>
            <option value="Compras diversas">Compras diversas</option>
            <option value="Investimentos">Investimentos</option>
            <option value="Atualizacao de estoque">Atualização de estoque</option>
            <option value="vendas">Vendas</option>
            <option value="manutencao">Manunteção</option>

          </select>
          <span class="input-group-text">Valor :</span>
          <input type="number" aria-label="Last name" class="form-control" id="valor" required step="0.01" name="valor" >
        </div>
        <div class="input-group">
          <label for="opcoes"><span class="input-group-text" for>Tipo:</span></label>
          <select class="form-select opcoes" id="inputGroupSelect04 tipo"
            aria-label="Example select with button addon" name="tipo" required>
            <option value="1">Entrada</option>
            <option value="0">Saída</option>
          </select>
          <span class="input-group-text">Data :</span>
          <input type="date" class="form-control" required name="dataRegistro" id="data">
          <button type="submit" class="btn btn-outline-primary" id="btn"><svg xmlns="http://www.w3.org/2000/svg" width="16"
              height="16" fill="currentColor" class="bi bi-arrow-down-right-circle seta2" viewBox="0 0 16 16">
              <path fill-rule="evenodd"
                d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.854 5.146a.5.5 0 1 0-.708.708L9.243 9.95H6.475a.5.5 0 1 0 0 1h3.975a.5.5 0 0 0 .5-.5V6.475a.5.5 0 1 0-1 0v2.768L5.854 5.146z" />
            </svg> Registrar</button>
        </div>
      </form>
    </div>
    <div class="tabela">
      <table class="table table-striped table-hover" id="tabela">
        <thead>
          <td>#</td>
          <td>Descrição</td>
          <td>Categoria</td>
          <td>Valor</td>
          <td>Tipo</td>
          <td>Data</td>
          <td>Apagar</td>
        </thead>
        <tbody id="tbody">
         
        </tbody>
      </table>
    </div>
  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
  integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
